suite_condition("SideKiq requires MRI 1.9.3 or JRuby 1.6 in 1.9 mode") do
  RUBY_VERSION >= '1.9.3' || (RUBY_PLATFORM == 'java' && RUBY_VERSION >= '1.9')
end

gemfile <<-RB
  # Latest version
  gem 'json'
  gem 'sidekiq', '~> 2.16.1'
  gem 'rack'
RB

gemfile <<-RB
  # Oldest supported version
  gem 'json'
  gem 'sidekiq', '~> 2.8.0'
  gem 'rack'
RB
