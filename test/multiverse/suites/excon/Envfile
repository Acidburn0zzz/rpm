suite_condition("Excon not supported in 1.8.6") do
  RUBY_VERSION != '1.8.6'
end

excon_versions = %w(0.24.0 0.19.0 0.18.0 0.17.0 0.16.0 0.14.0 0.13.0 0.12.0 0.11.0 0.10.0)

excon_versions.each do |excon_version|
  gemfile <<-RB
    gem 'excon', '~> #{excon_version}'
    gem 'rack'
    if RUBY_VERSION < '1.9.0'
      gem 'json'
    end
  RB
end
